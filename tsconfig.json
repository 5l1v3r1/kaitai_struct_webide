{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "amd",
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "target": "es2016",
    "outDir": "js/",
    "lib": [ "es6", "dom" ],
    "typeRoots": [ "./lib/ts-types/" ]
  },
  "include": [
    "src/**/*",
    "./lib/ts-types/*.ts"
  ]
}