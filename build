#!/bin/sh -e

OUT_DIR=out
TSC=node_modules/.bin/tsc

mkdir -p "$OUT_DIR/js"

"$TSC" --outDir $OUT_DIR/js/ --sourcemap --target ES6 --noEmitOnError src/*.ts lib/ts-types/*.ts

cp -r \
	index.html \
	css \
	formats \
	samples \
	lib \
	"$OUT_DIR"

# FIXME: probably should not be located in js/
cp \
	js/autorefresh.js \
	js/config.js \
	js/kaitaiFsFiles.js \
	"$OUT_DIR/js"
