{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "system",
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "noEmitOnError": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "target": "es2016",
    "outDir": "js/",
    "lib": [ "es6", "dom" ]
  },
  "include": [
    "src/**/*",
    "./lib/ts-types/*.ts"
  ]
}